name: Build, Push, Deploy and Notify

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2

      - name: Notify on Slack - Build Started
        run: |
          curl -X POST -H 'Content-type: application/json' --data '{"text":"Build started"}' ${{ secrets.SLACK_WEBHOOK_URL }}

      - name: Build Docker image
        run: docker build -t test_image .

      - name: Login to Docker Hub
        run: docker login -u ${{ secrets.DOCKER_USERNAME }} -p ${{ secrets.DOCKER_ACCESS_TOKEN }}

      - name: Slack Notification
        uses: rtCamp/action-slack-notify@v2
        with: 
          status: ${{ job.status }}
          text: Build and login Successfully
        env:
          SLACK_WEBHOOK: ${{ secrets.SLACK_WEBHOOK_URL }}
